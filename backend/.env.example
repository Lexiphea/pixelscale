# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pixelscale

# AWS S3
S3_BUCKET_RAW=pixelscale-raw
S3_BUCKET_PROCESSED=pixelscale-processed
AWS_REGION=us-east-1

# Optional: For local development without AWS credentials
# Set to "true" to use local filesystem instead of S3
USE_LOCAL_STORAGE=false
LOCAL_STORAGE_PATH=./uploads

# JWT Authentication (IMPORTANT: Change secret key in production!)
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
USE_CLOUDWATCH=false
CLOUDWATCH_LOG_GROUP=pixelscale
CLOUDWATCH_LOG_STREAM=backend
# AWS credentials for CloudWatch (optional, uses instance role if not set)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
